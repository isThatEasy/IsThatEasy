<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pink_background"
        android:layout_marginStart="1dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginBottom="30dp"
        >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="295dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/math_10799_mod" />

        <TextView
            android:id="@+id/school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/pinkBg"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp"
            android:text="school"
            android:textColor="@color/text_color_on_p" />

        <Button
            android:id="@+id/class_Enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="150dp"
            android:text="Enter"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:theme="@style/Theme.IsThatEasy2.P3" />

        <TextView
            android:id="@+id/class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:background="@drawable/white_bg"
            android:text="Class Title"
            android:textColor="@color/red_front"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/classes_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/pinkBg"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp"
            android:layout_gravity="top|end"
            android:text="@string/topic"
            android:textColor="@color/text_color_on_p" />

        <TextView
            android:id="@+id/class_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/pinkBg"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp"
            android:text="@string/teacher_name"
            android:textColor="@color/text_color_on_p" />
    </FrameLayout>